@using wizardcms.Models
@{
   
    Layout = "~/Views/Shared/Home.cshtml";
    var sssList = (List<sssDto>)ViewData["sssList"];

    var path = Request.CurrentExecutionFilePath.ToString();
    var ayrac = path.Split('/');
    int pathType = 0;
    if (path == "/" || path == "" || path == "en")
    {
        path = "tr";
        pathType = 1;
    }
    else
    {
        string newPath = path.Substring(0, 3);
        if (newPath == "/en")
        {
            path = "en";
            pathType = 2;
        }
        else if (newPath == "/ru")
        {
            path = "ru";
            pathType = 3;
        }
        else
        {
            path = "tr";
            pathType = 1;
        }
    }
    
}

<main id="f-a-qPage">

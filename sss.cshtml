        <div id="p-t-c" class="container">
             @if (@path == "tr")
             {
                <h1>Sıkça Sorulan Sorular</h1>  
             }
             else if (@path == "en")
             {
                  <h1>Frequently Asked Questions?</h1>
             }
             else
             {
                  <h1>Frequently Asked Questions?</h1>
             }

            
           
               <div id="q-a-c">
